root = true

[*]
indent_style = space
indent_size = 4
max_line_length = 80
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
quote_type = double
semicolon = true

[*.jsx]
quote_type = double
semicolon = true

[*.ts]
quote_type = double
semicolon = true

[*.tsx]
quote_type = double
semicolon = true

[*.css]
indent_size = 4
indent_style = space

[*.json]
quote_type = double
indent_size = 4

[*.yaml]
indent_size = 2
indent_style = space

[*.toml]
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false

# Ignore these directories
[{node_modules,.next,out,dist,build,*.log}]
ignore = true
